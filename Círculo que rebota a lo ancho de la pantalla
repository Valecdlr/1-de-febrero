var x = 200;
var vel = 4;

function setup() {
  createCanvas(400,400);
}
function draw() {
  background(0);
    fill(255);
    ellipse(x,200,50,50);
    x = x + vel;
    if(x > 375){
        vel = vel*-1;
    }
    if(x < 25){
        vel = vel*-1;
    }
}
